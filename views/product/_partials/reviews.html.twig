{% if reviews is empty %}
    There are currently no reviews for this item.<br />
    <a href="{{ app.url }}/review/id/{{product.id}}">Be the first to add one.</a>
{% else %}
    <h4>Product Reviews  <small> - <a href="{{ app.url }}/review/id/{{product.id}}">Submit a review</a></small></h4>
    <hr>
        {% for review in reviews %}
            {% if review_snippet == true%}
            {# Google Rich Snippet Start Review #}
             <div itemprop="review" itemscope itemtype="http://data-vocabulary.org/Review">
                  <span itemprop="reviewrating" style="display:none">{{ review.score * 5 }}</span>
                  {{ base.rating(review.score, {'id':'star-rating-' ~ loop.index}) }}<small> <span itemprop="author">{{ review.first_name|title }}</span>, {{review.city|title}} {{ review.state|upper }} <i> on  <span itemprop="datepublished">{{ review.date_created|strtotime|date("m-d-Y") }}</span> </i></small>
                  <h4 id="review-title" itemprop="description">{{ review.title }}</h4>
                  <p itemprop="reviewbody">{{ review.comment|unescape }}</p>
             </div>
             {# Google Rich Snippet End Review #}
            {% else %}
              <div>
                   {{ base.rating(review.score, {'id':'star-rating-' ~ loop.index}) }}<small> {{ review.first_name|title }}, {{review.city|title}} {{ review.state|upper }} <i> on  {{ review.date_created|strtotime|date("m-d-Y") }} </i></small>
                   <h4 id="review-title">{{ review.title }}</h4>
                   <p>{{ review.comment|unescape }}</p>
              </div>
            {% endif %}
           <hr>
        {% endfor %}

{% endif %}
