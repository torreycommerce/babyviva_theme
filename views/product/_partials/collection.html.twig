<span  itemscope itemtype="http://data-vocabulary.org/Product"> {# Google Rich Snippet Start Product Scope #}
<div id="collection-details">
    <div class="row">
        {# Beging product images #}
        <section id="product-images" class="col-xs-12 col-sm-5 col-md-4 col-lg-6">
            {# Begin main image #}
            {% set main_image_id = product.images.0.id is not empty ? product.images.0.id : product.product|values_in('images')[0]['id'] %}
            {% set main_image_id = main_image_id is empty ? 'default' : main_image_id %}
            <div id="image-main">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="thumbnail">
                            <span class="helper hidden-xs"></span>
                            <div id="main-product-video" style="display:none"></div>
                            <img id="main-product-image" class="img-responsive" src="{{app.image.getImageUrl("product","standard",main_image_id) }}" data-image-zoom="{{app.image.getImageUrl("product","large",main_image_id) }}" alt="" />
                        </div>
                    </div>
                </div>
            </div>
            {# End main image #}
            {# Begin image carousel #}
            <div id="image-carousel" class="hidden-xs row">
                <div class="image-carousel">
                    <div id="image-carousel-{{product.id}}" class="carousel">
                        <div>
                            <div class="item active">
                                {% for image in product.images %}
                                {% set name = image.name is not empty ? image.name : product.name %}
                                <div class="col-sm-2">
                                    <div class="thumbnail" data-tooltip="" data-toggle="tooltip" data-original-title="{{ name }}">
                                        <img class="" itemprop="image" src="{{app.image.getImageUrl("product","thumbnail",image.id) }}" data-image-swap="main-product-image" data-image-swap-src="{{app.image.getImageUrl("product","standard",image.id) }}"  data-image-swap-zoom="{{app.image.getImageUrl("product","large",image.id) }}" alt="" />
                                    </div>
                                </div>
                                {% endfor %}
                                {% set items = product.product %}
                                {% for item in items %}
                                {% for image in item.images if image.id is not empty %}
                                {% set name = image.name is not empty ? image.name : item.name %}
                                <div class="col-sm-2">
                                    <div class="thumbnail" data-tooltip="" data-toggle="tooltip" data-original-title="{{ name }}">
                                        <img class="" src="{{app.image.getImageUrl("product","thumbnail",image.id) }}" data-image-swap="main-product-image" data-image-swap-src="{{app.image.getImageUrl("product","standard",image.id) }}"  data-image-swap-zoom="{{app.image.getImageUrl("product","large",image.id) }}" alt="" />
                                    </div>
                                </div>
                                {% endfor %}
                                {% endfor %}
                                {% if product.videos is not empty %}
                                {% do app.asset.js(app.url ~ '/js/video-player.js') %}
                                {% for video in product.videos %}
                                <div class="col-sm-2">
                                    <div class="thumbnail video" data-video-src="{{ video }}" data-tooltip="" data-toggle="tooltip" data-original-title="">
                                        <i class="video-icon fa fa-play-circle"></i><img src="">
                                    </div>
                                </div>
                                {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {# End image carousel #}
        </section>
        {# End product images #}
        {# Begin Product Details #}
        <section id="product-details" class="col-xs-12 col-sm-7 col-md-8 col-lg-6">
            {# Begin product header #}
            <header>
                <div itemprop="brand" class="brand"><a href="{{app.url}}/brand/{{product.brand|url_encode}}">{{product.brand}}</a></div>
                <h1 itemprop="name" class=>{{product.name}}</h1>
            </header>
            {# End product header #}
            {# Begin review stars#}
            {% set review_score = product.product|values_in('review_score')|merge([product.review_score])|average() %}
            {% if review_score > 0  and reviews.num_total > 0 %}
            {# Google Rich Snippet Start ReviewAGG Scope #}
            <span itemprop="review" itemscope itemtype="http://data-vocabulary.org/aggregaterating">
            <div class="reviews row">
                <div class="col-md-12">
                    <ul class="list-inline">
                        <li>
                            <a onclick="$('.nav-tabs a:last').tab('show')" href="#reviews">{{ base.rating( review_score ) }}</a>
                            {# Google Rich Snippet Start rating + count #}
                            <a onclick="$('.nav-tabs a:last').tab('show')" href="#reviews"><span itemprop="rating">{{ (review_score * 5)|number_format(1) }}</span> {% if reviews.num_total != 0 %}(<span itemprop="count">{{ reviews.num_total }}</span>){% endif %}</a>
                            {# Google Rich Snippet End rating + count #}
                        </li>
                        <li><a href="{{ app.url }}/review/id/{{product.id}}">Submit a Review</a></li>
                    </ul>
                </div>
            </div>
          </span>
          {# Google Rich Snippet End ReviewAGG Scope #}
            {% endif %}
            {# End review stars #}
            {# Begin product prices #}
            {% set prices =  product.product|values_in('variant')|values_in(['price','compare_price','save_price','save_percent']) %}
            {% if prices.price|first > 0 %}
            <div id="product-price">
                <div class="row">
                    <div class="col-md-12">
                        <div class="price-range">{{ prod.price(prices.price) }}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="product-price-details">
                          {% if (prices.compare_price is not empty and prices.compare_price != prices.price) or (prices.save_price is not empty and prices.save_percent is not empty) %}
                            <ul class="list-unstyled list-inline">
                              {% if prices.compare_price is not empty and prices.compare_price != prices.price %}
                                <li class="price-regular">
                                    Compare at {{ prod.price(prices.compare_price) }}
                                </li>
                              {% endif %}
                              {% if prices.save_price is not empty and prices.save_percent is not empty %}
                                <li class="percent">
                                    Save up to {{ prod.saveprice(prices.save_price) }} {{ prod.savepercent(prices.save_percent) }}
                                </li>
                              {% endif %}
                            </ul>
                          {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            {# End product prices #}
            {# Begin add to cart / actions area #}
            {% if prices.price is not empty %}
            <div class="row">
                <div class="col-md-12">
                    <div class="btn-toolbar">
                        <a class="btn btn-add-to-cart" href="#collection">
                            <i class="fa fa-shopping-cart"></i>&nbsp;<span class="text">Add to Cart Below</span>
                        </a>
                    </div>
                </div>
            </div>
            {% endif %}
            {# End add to cart / actions area #}
            {# Begin short description #}
            {% if product.description is not empty %}
                {% set description = product.description|slice(0,300) %}
                <section id="collection-short-description-desktop" class="hidden-xs">
                    <div class="description-content">
                        {{ description }}{% if product.description|length > 300 %}... <a href="javascript: void(0);" class="read-more">(Read more)</a>{% endif %}
                    </div>
                </section>
            {% endif %}
            {# End short description #}
            {# Begin social sharing #}
            {% if app.params.social_settings is defined and app.params.social_settings is not empty %}
                <div id="social">
                    <div class="row">
                        <div class="col-md-12">
                            <span class="text">Share this item:</span>
                            {{ social.sharing_buttons(app.params.social_settings, product) }}
                        </div>
                    </div>
                </div>
            {% endif %}
            {# End social sharing #}

        </section>
    </div>
    {% if product.description is not empty %}
        <section id="collection-short-description-mobile" class="hidden-sm hidden-md hidden-lg">
            <div class="row">
                <div class="col-sm-12 col-xs-12">
                    <div class="description-content">
                        {{ description }}
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
</div>
{# End Product Details #}
{# Begin Product Tabs #}
<section id="collection">
    <div class="row">
        <div class="col-md-12">
            {# Begin tabs nav #}
            <div class="panel-tabs">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#children" data-toggle="tab">Products</a></li>
                            {% if product.description is not empty %}
                            <li><a href="#details" data-toggle="tab">Description</a></li>
                            {% endif %}
                            <li><a href="#reviews" data-toggle="tab">Reviews</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            {# End tabs nav #}
            {# Begin tab pane #}
            <div class="tab-content">
                <div id="children" class="tab-pane fade in active">
                    <form method="post" id="productForm" action="{{ app.url }}/product/route" class="form-inline">
                        <div class="panel panel-default">
                            {# Begin pane actions / registry / wishlist / add to cart #}
                            {% if app.user.id is not empty %}
                                {% set children_ids = [] %}
                                {% for child in children %}
                                    {% set children_ids = children_ids|merge([child.id]) %}
                                {% endfor %}
                                {% set registries = api.get('/registry', {query:{customer_id:app.user.id}}) %}
                            {% if registries is not empty %}
                            {% set registry_ids = [] %}
                            {% for registry in registries %}
                            {% set registry_ids = registry_ids|merge([registry.id]) %}
                            {% endfor %}
                            {% set items_in_registry = api.get('/registryitem', {query:{registry_id:{'$in':registry_ids},product_id:{'$in':children_ids}}}) %}
                            {% endif %}
                            {% set wishlists = api.get('/wishlist', {query:{customer_id:app.user.id}}) %}
                            {% if wishlists is not empty %}
                            {% set wishlist_ids = [] %}
                            {% for wishlist in wishlists %}
                            {% set wishlist_ids = wishlist_ids|merge([wishlist.id]) %}
                            {% endfor %}
                            {% set items_in_wishlist = api.get('/wishlistitem', {query:{wishlist_id:{'$in':wishlist_ids},product_id:{'$in':children_ids}}}) %}
                            {% endif %}
                            {% endif %}
                            <div class="panel-heading">
                                {# Begin desktop buttons #}
                                <div class="hidden-xs btn-toolbar">
                                    {% include "/product/_partials/list/buttons.html.twig" %}
                                    {# Begin add to cart button #}
                                    <button type="submit" class="btn btn-add-to-cart" name="action" value="cart">
                                        <i class="fa fa-shopping-cart"></i>
                                        <span>Add to Cart</span>
                                    </button>
                                    {# End add to cart button #}
                                </div>
                                {# End desktop buttons #}
                                {# Begin mobile buttons #}
                                <div class="visible-xs btn-toolbar">
                                    <div class="actions row">
                                        {# Begin buy button #}
                                        <div class="col-sm-12 col-xs-12">
                                            <button type="submit" name="action" value="cart" class="btn btn-add-to-cart btn-block">
                                                <i class="fa fa-shopping-cart"></i>
                                                <span>Add to Cart</span>
                                            </button>
                                        </div>
                                        {# End buy button #}
                                        {% include "/product/_partials/list/buttons-mobile.html.twig" %}
                                    </div>
                                </div>
                                {# End mobile buttons #}
                            </div>
                            {# End pane actions #}
                            <div class="panel-body">
                                {% set items = product.product %}
                                {% set layouts = product.layout is not empty ? product.layout : [{'name':'','items':items|values_in('id')}]%}
                                {% for layout in layouts %}
                                {% set children = items|find({'id':layout.items}) %}

                                {% if children is not empty %}
                                <div class="pane-group">
                                    {# Begin collection group header #}
                                    {% if layout.name != '' %}
                                    <div class="group-header">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h4>{{layout.name}}</h4>
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                    {# End collection group header #}
                                    {# Begin collection product $(this).parentsUntil('.product').hide(); #}
                                    {% for product in children %}
                                     {% set variation_dropdown = '' %}
                                    {% if product.variant|length > 1 %}
                                    {% set variation_dropdown %}
                                    {% spaceless %}
                                    <div class="variation-selection">
                                        <div class="input-group">
                                            <select id="variation-selector-{{product.id}}" class="form-control" onchange="showProductVariation($(this));">
                                                {% for variation in product.variant %}
                                                <option value="product-{{variation.id}}">Style: {{variation.name}}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                    {% endspaceless %}
                                    {% endset %}
                                    {% endif %}
                                    <div class="variations">
                                        {% for variation in product.variant %}
                                        {# Google Rich Snippet Start Offer Scope #}
                                        <span itemprop="offer" itemscope itemtype="http://data-vocabulary.org/Offer">
                                        <div class="product" id="product-{{variation.id}}" {% if loop.index > 1 %}style="display:none"{% endif %}>
                                            <div class="row">
                                                {# Begin collection product image #}
                                                {% if variation.images is not empty %}
                                                <div class="col-xs-5 col-sm-6 col-md-2 col-lg-2">
                                                    <div class="image">
                                                        <div class="thumbnail">
                                                            <img src="{{ app.image.getImageUrl("product","thumbnail",variation.images.0.id) }}" width="250" class="img-responsive" data-image-swap="main-product-image" data-image-swap-src="{{app.image.getImageUrl("product","standard",variation.images.0.id) }}"  data-image-swap-zoom="{{app.image.getImageUrl("product","large",variation.id) }}" alt="" />
                                                        </div>
                                                    </div>
                                                </div>
                                                {% elseif product.thumbnail is not empty %}
                                                <div class="col-md-2 col-sm-6 col-xs-5">
                                                    <div class="image">
                                                        <div class="thumbnail">
                                                            <img src="{{ product.thumbnail }}" width="250" class="img-responsive" data-image-swap="main-product-image" {% if product.images.0.id is defined %}data-image-swap-src="{{app.image.getImageUrl("product","standard", product.images.0.id) }}" data-image-swap-zoom="{{app.image.getImageUrl("product","large",product.images.0.id) }}"{% endif %} alt="" />
                                                        </div>
                                                    </div>
                                                </div>
                                                {% else %}
                                                <div class="col-md-2 col-sm-6 col-xs-5">
                                                    <div class="image">
                                                        <div class="thumbnail"></div>
                                                    </div>
                                                </div>
                                                {% endif %}
                                                {# End collection product image #}
                                                {# Begin collection product details #}
                                                <div class="col-xs-7 col-sm-6 col-md-7 col-lg-8">
                                                    <div class="details">
                                                        <h5>{{ product.name }}</h5>
                                                        {{ variation_dropdown }}
                                                        <div class="price">{% if variation.price > 0 %}<span itemprop="price">{{ prod.price(variation.price) }}</span>{% endif %}</div>
                                                        <meta itemprop="priceCurrency" content="USD" />
                                                        <div class="product-price-details">
                                                          {% if variation.price >= 100 or variation.compare_price > 0 or variation.save_price is not empty %}
                                                            <ul class="list-unstyled list-inline">
                                                                {% if variation.price >= 100 %}
                                                                  <li class="price-per-month">
                                                                      <span data-tooltip data-toggle="tooltip" data-original-title="Spread payments over six months by selecting &quot;Checkout with Paypal&quot; on the Shopping Cart page. Then log in and apply for a &quot;Bill Me Later&quot; account.">
                                                                          {{ prod.billmelater(variation.price) }}
                                                                      </span>
                                                                  </li>
                                                                {% endif %}
                                                                {% if variation.compare_price > 0 %}
                                                                  <li class="price-regular">
                                                                      Compare at {{ prod.price(variation.compare_price) }}
                                                                  </li>
                                                                {% endif %}
                                                                {% if variation.save_price is not empty %}
                                                                  <li class="percent">
                                                                      Save {{ prod.saveprice(variation.save_price) }} {{ prod.savepercent(variation.save_percent) }}
                                                                  </li>
                                                                {% endif %}
                                                            </ul>
                                                          {% endif %}

                                                          {% if (variation.inventory_quantity is defined and variation.inventory_minimum_quantity is defined)
                                                            or (variation.inventory_shipping_estimate is not empty) %}
                                                            <ul class="list-unstyled list-inline">
                                                                <li class="estimated-time">
                                                                    {% if variation.inventory_quantity > variation.inventory_minimum_quantity %}
                                                                        In Stock
                                                                    {% elseif variation.inventory_shipping_estimate is not empty %}
                                                                    <span class="text-danger">
                                                                        {{ variation.inventory_shipping_estimate }}
                                                                    </span>
                                                                    {% endif %}
                                                                </li>
                                                            </ul>
                                                          {% endif %}

                                                            {% if product.tags is not empty %}
                                                              <ul class="list-unstyled list-inline">
                                                                  <li class="product-tags hidden-xs hidden-sm">
                                                                  {% for tag in product.tags %}
                                                                      <span class="btn btn-primary btn-xs">{{tag|title}}</span>
                                                                  {% endfor %}
                                                                  </li>
                                                              </ul>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                                {# End collection product details #}
                                                {# Begin collection product actions #}
                                                <div class="col-xs-7 col-sm-6 col-md-3 col-lg-2">
                                                    <div class="actions">
                                                        <div class="btn-toolbar">
                                                            <div class="quantity-input-group quantity">
                                                              {# If not Available for order Do not show - + Qty buttons #}
                                                              {# <pre>{{ dump(product) }}</pre> #}
                                                              {% if product.variant[0]['inventory_quantity'] is defined and product.variant[0]['inventory_minimum_quantity'] is defined and
                                                                product.variant[0]['inventory_policy'] is defined and (product.variant[0]['inventory_policy'] == 'continue' or
                                                                product.variant[0]['inventory_quantity'] > product.variant[0]['inventory_minimum_quantity'] ) %}
                                                                <label for="quantity-selector" class="control-label">Qty</label>
                                                                <div class="input-group">
                                                                    <div class="input-group-btn">
                                                                        <button class="btn btn-neutral btn-remove"><i class="fa fa-minus"></i></button>
                                                                    </div>
                                                                    <input class="form-control quantity-selector" type="text" value="{{ children.total_count == 1 ? 1 : 0 }}" maxlength="2" name="items[{{variation.id}}]">
                                                                    <div class="input-group-btn">
                                                                        <button class="btn btn-neutral btn-add"><i class="fa fa-plus"></i></button>
                                                                    </div>
                                                                </div>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                {# End collection product actions #}
                                            </div>
                                        </div>
                                        {% endfor %}
                                        {# End variation block of product #}
                                    </div>
                                    {% endfor %}
                                    {# End collection product #}
                                </div>
                                {% endif %}
                              </span>
                              {# Google Rich Snippet End Offer Scope #}
                                {% endfor %}
                            </div>
                            {% if children|length > 3 %}
                            <div class="panel-footer">
                                {# Begin desktop buttons #}
                                <div class="hidden-xs btn-toolbar">
                                    {% include "/product/_partials/list/buttons.html.twig" %}
                                </div>
                                {# End desktop buttons #}
                                {# Begin mobile buttons #}
                                <div class="visible-xs btn-toolbar">
                                    {% include "/product/_partials/list/buttons-mobile.html.twig" %}
                                </div>
                                {# End mobile buttons #}
                            </div>
                            {% endif %}
                        </div>
                    </form>
                </div>
                <div id="details" class="tab-pane fade">
                    <div class="panel panel-default">
                        {# Google Rich Snippet Start Description #}
                        <div class="panel-body" itemprop="description">
                            {{product.description}}
                        </div>
                        {# Google Rich Snippet End Description #}
                    </div>
                </div>
                <div id="reviews" class="tab-pane fade">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            {% set review_snippet = true %}
                            {% include "/product/_partials/reviews.html.twig" %}
                        </div>
                    </div>
                </div>
            </div>
            {# End tab pane #}
        </div>
    </div>
</section>
{# End Product Tabs #}
</span> {# Google Rich Snippet End Product Scope #}
